datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id             String   @id @default(cuid())
  paymentId      String   @unique
  amount         Float
  description    String
  status         String
  qrCode         String?
  qrCodeBase64   String?
  paymentUrl     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime?
}
